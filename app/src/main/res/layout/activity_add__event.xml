<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_or_padding_16"
    tools:context=".Edit_User_Profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_or_padding_16"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_margin="@dimen/margin_or_padding_8"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="130dp"
                android:layout_marginTop="2dp"
                android:text="@string/Choose_Image_Event"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_Event"
                android:layout_width="75dp"
                android:layout_height="215dp"
                app:srcCompat="@drawable/baseline_account_balance_black_18dp"
                tools:layout_editor_absoluteX="175dp"
                tools:layout_editor_absoluteY="147dp" />

        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_or_padding_16">

            <EditText
                android:id="@+id/ed_create_new_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_or_padding_8"
                android:layout_marginLeft="@dimen/margin_or_padding_16"
                android:layout_marginRight="@dimen/margin_or_padding_16"
                android:hint="@string/name"
                android:inputType="text"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_or_padding_16">

            <EditText
                android:id="@+id/ed_event_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_or_padding_8"
                android:layout_marginLeft="@dimen/margin_or_padding_16"
                android:layout_marginRight="@dimen/margin_or_padding_16"
                android:hint="@string/Event_Location"
                android:inputType="textMultiLine" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_or_padding_16">

            <EditText
                android:id="@+id/ed_event_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_or_padding_8"
                android:layout_marginLeft="@dimen/margin_or_padding_16"
                android:layout_marginRight="@dimen/margin_or_padding_16"
                android:hint="@string/Event_Description"
                android:inputType="textMultiLine" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_or_padding_16"
            android:layout_marginLeft="@dimen/margin_or_padding_16"
            android:layout_marginRight="@dimen/margin_or_padding_16"
            android:background="@drawable/custom_button"
            android:text="@string/Next_Page"
            android:textColor="@color/white" />
    </LinearLayout>
</ScrollView>