<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".User_Profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="@dimen/margin_or_padding_8"
        android:gravity="center">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/im_profile_edit"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_margin="@dimen/margin_or_padding_8"
            android:scaleType="centerCrop"
            android:src="@drawable/user"
            app:civ_border_color="#1e0303"
            app:civ_border_width="2dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#000000"
            app:civ_shadow_radius="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="@dimen/width"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_or_padding_16"
            android:text="@string/name"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="@dimen/width"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_or_padding_16"
            android:text="@string/name"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="@dimen/width"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_or_padding_16"
            android:text="@string/email"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/txt_email"
            android:layout_width="@dimen/width"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_or_padding_16"
            android:text="@string/email"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="@dimen/width"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_or_padding_16"
            android:text="@string/phone"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/txt_phone"
            android:layout_width="@dimen/width"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_or_padding_16"
            android:text="@string/phone"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="@dimen/width"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_or_padding_16"
            android:text="@string/gender"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/txt_gender"
            android:layout_width="@dimen/width"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_or_padding_16"
            android:text="@string/gender"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>
</LinearLayout>